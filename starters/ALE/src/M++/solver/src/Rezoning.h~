#include <string>

/*!
  normal is the normal of the plane and point is the position of the plane
*/

struct ALEMesh {
	int num_vertices;
  	double* coords = NULL;
	int num_cells;
	int* ids = NULL;
	bool* fixed = NULL;
};

void Rezoning (const ALEMesh& AM1, ALEMesh& AM2, int n=0);

void VTK2ALEMesh (std::string file_name, ALEMesh& AM);
void ALEMesh2VTK (const ALEMesh& AM, std::string file_name);
