sudo apt update
sudo apt -y install make gcc g++ libz-dev cmake libopenmpi-dev libeigen3-dev libboost-dev python3-dev python3-matplotlib p7zip-full

CPATH=$CPATH:$PWD/third-party/gzstream:$PWD/third-party/matplotlib-cpp:/usr/include/python2.7
export CPATH
LIBRARY_PATH=$LIBRARY_PATH:$PWD/third-party/gzstream
export LIBRARY_PATH

mkdir build
cd build
cmake ..
make -j4

cp ../ovito_merge_dumps.py ./
cp ../examples/cutting/cutting_tl_1.0.mpm ./
7za x ../ovito-basic-3.10.6-x86_64.7z -o/$PWD/../