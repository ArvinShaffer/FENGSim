sudo apt -y install gcc g++ make cmake
sudo apt -y install automake autoconf

./autogen.sh
mkdir build
cd build
../configure --with-ngshared --enable-cider --prefix=$PWD/../../install/ngspice_install CFLAGS="-g -m64 -O0 -Wall" LDFLAGS="-m64 -g"
#../configure --with-ngshared --enable-cider --with-x --prefix=$PWD/../install/ngspice_install
make -j4
make install